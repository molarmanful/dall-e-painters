-
  let painters = {
    dali: {
      quote: '"Have no fear of perfection - you\'ll never reach it." salvador dali painting',
      keywords: 'religious works desires imaginary female figure giant rocky cliff many odd objects freudian painting',
      work: 'the persistence of memory salvador dali painting',
    },
    picasso: {
      quote: '"If I paint a wild horse, you might not see the horse... but surely you will see the wildness!" Pablo Picasso paint',
      keywords: 'cubism surrealism expressionism post-impressionism open figuration abstraction texture collage',
      work: 'the weeping woman pablo picasso painting',
    },
    davinci: {
      quote: '"Art is never finished, only abandoned." leonardo da vinci painting',
      keywords: 'transparent earthy colors narrow tonal range Renaissance realistic chiaroscuro oil painting',
      work: 'mona lisa leonardo da vinci painting',
    },
    warhol: {
      quote: '"I like money on the wall." andy warhol photographic screen painting',
      keywords: 'pop art colorful bold garnish color high contrast high saturation consumerism repetitive photographic screen painting',
      work: 'campbell\'s soup cans andy warhol photographic screen painting',
    },
  }
  let imgs = [0, 1, 2, 3]

doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title dall-e painters
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css')
    link(rel='stylesheet' href='bulmaswatch.min.css')
    link(rel='stylesheet' href='style.css')

  body
    header.mb-5: .container
      h1.is-size-1.mt-2 dall-e painters 
        a(href='https://github.com/molarmanful/dall-e-painters' target='_blank').mt-2.mb-4.is-size-6 github
      .tabs.mt-2.mb-4: ul
        li.is-active: a all
        li: a quote
        li: a keywords
        li: a work

    for data, painter in painters
      for prompt, field in data
        section.mb-5(class=field): .container
          h2.is-size-3.mt-2= painter + '/' + field
          p.mt-2.mb-4 prompt: 
            code= prompt
          .columns
            for i in imgs
              .column
                figure.image.is-square
                  -
                    let src = `pics/${painter}-${field}-${i}`
                    let big = src + '.png'
                    let small = src + '-32.png'
                  a(href=big target='_blank'): img.lazy(src=small data-src=big)

    script(src='https://cdn.jsdelivr.net/npm/vanilla-lazyload@17.8.3/dist/lazyload.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/cash/8.1.1/cash.min.js')
    script(src='main.js')